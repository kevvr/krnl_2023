---

import ComponentGalleryItem from "../components/Component_GalleryItem.astro";
import ComponentWaveyLine from "../components/Component_WaveyLine.astro";
---
<section id="work">
 <div class="container work__container">
  <div class="work__title">
   <h2>
    Recent werk
   </h2>
   <ComponentWaveyLine></ComponentWaveyLine>
  </div>
  <div class="work__gallery">
   <div class="gallery">
    <ComponentGalleryItem image="https://picsum.photos/600/600" title="Titel" description="Dit is een korte beschrijving van wat recent werk." buttonText="Lees meer"></ComponentGalleryItem>
    <ComponentGalleryItem image="https://picsum.photos/600/600" title="Titel" description="Dit is een korte beschrijving van wat recent werk." buttonText="Lees meer"></ComponentGalleryItem>
    <ComponentGalleryItem image="https://picsum.photos/600/600" title="Titel" description="Dit is een korte beschrijving van wat recent werk." buttonText="Lees meer"></ComponentGalleryItem>
    <ComponentGalleryItem image="https://picsum.photos/600/600" title="Titel" description="Dit is een korte beschrijving van wat recent werk." buttonText="Lees meer"></ComponentGalleryItem>
   </div>
  </div>
 </div>
</section>

<script>

 // GSAP Mobile
 let galleryItems = gsap.utils.toArray(".gallery__item");
 console.log(galleryItems);
 ScrollTrigger.matchMedia({
  "(max-width: 719px)": function() {
   galleryItems.forEach((galleryItem) => {
    gsap.to(galleryItem.querySelector('.gallery__content'), {
     y: 0,
     scrollTrigger: {
      trigger: galleryItem,
      start: 'top center',
      end: 'bottom center',
      markers: false,
      toggleActions: 'play reverse play reverse'
     }
    })
   }) 
  }
 })
</script>

<style lang="scss">
@use '../styles/_mixins.scss' as *;

 #work {
  .work {
   &__container {
    padding-block: 50px;
    border-bottom: 2px solid var(--color-primary);
   }

   &__title {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--grid-block-l);

    h2 {
     font-size: var(--font-size-l);
     font-weight: 500;
    }
   }

   &__gallery {
    margin: 0 auto;
    
    .gallery {
     width: 100%;
     height: 100%;

     display: flex;
     flex-direction: column;
     gap: var(--grid-gap);
    }
   }
  }
 }

 @include md {
  #work {
   .work {
    &__container {
     padding-block: 100px;
    }
    &__gallery {
     .gallery {
      height: 600px; 

      display: grid;
      grid-template-columns: repeat(12, 1fr);
      grid-template-rows: repeat(6, 1fr);
     }
    }
   }
  }
 }

 @include lg {
  #work {
   .work {
    &__gallery {
     .gallery {
      &__item {
       &:nth-child(1) {
        grid-column-start: 1;
        grid-column-end: 7;
        grid-row-start: 1;
        grid-row-end: 7;
       }
       &:nth-child(2) {
        grid-column-start: 7;
        grid-column-end: 10;
        grid-row-start: 1;
        grid-row-end: 4;
       }
       &:nth-child(3) {
        grid-column-start: 7;
        grid-column-end: 10;
        grid-row-start: 4;
        grid-row-end: 7;
       }
       &:nth-child(4) {
        grid-column-start: 10;
        grid-column-end: 13;
        grid-row-start: 1;
        grid-row-end: 7;
       }
       &:hover .gallery__content {
        transform: translateY(0%);
       }
      }
     }
    }
   }
  }
 }

 @include xl {
  #work {
   .work {
    &__gallery {
     margin: 0 calc(50% - 600px) 0 calc(50% - 600px);
    }
   }
  }
 }
</style>